<div class="container padding-top-70">


<h1>Create new Cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>

<%= link_to 'Back', cocktails_path %>

</div>
