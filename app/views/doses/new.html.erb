<div class="container padding-top-70">


<h1>Add cocktail Doses</h1>

<%= simple_form_for([@cocktail, @dose]) do |f| %>

  <div class="form-inputs">
    <%= f.association :ingredient %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', cocktails_path %>

</div>
